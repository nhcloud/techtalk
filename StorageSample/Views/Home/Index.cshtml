@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h2>Blob Storage</h2>
                <input type="button" value="Generate Random File" id="randFile" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2>FileName</h2>
                <span id="fileName"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2>FileContent</h2>
                <span id="fileContent"></span>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h2>Table Storage</h2>
                <input type="button" value="Generate Random Table Entry" id="randTable" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2>Entry Key</h2>
                <span id="entryKey"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2>Entry Val</h2>
                <span id="entryVal"></span>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $("#randFile").click(function() {
            $("#fileName").text("");
            $("#fileContent").text("");
            $.ajax({
                url: "/api/storage/blob",
                type: 'POST',
                data: {},
                contentType: 'application/json',
                success: function (data) {
                    $("#fileName").text(data);
                },
                error: function (err) {
                    $("#fileContent").text("Error occured!"+err);
                }
            });
        });
        $("#fileName").click(function () {
            var fileName = $("#fileName").text();
            $.ajax({
                url: "/api/storage/blob/"+fileName,
                type: 'Get',
                success: function (data) {
                    $("#fileContent").text(data);
                },
                error: function (err) {
                    $("#fileContent").text("Error occured!"+err);
                }
            });
        });

        $("#randTable").click(function () {
            $("#entryKey").text("");
            $("#entryVal").text("");
            $.ajax({
                url: "/api/storage/table",
                type: 'POST',
                data: {},
                contentType: 'application/json',
                success: function (data) {
                    $("#entryKey").text(data);
                },
                error: function (err) {
                    $("#entryVal").text("Error occured!" + err);
                }
            });
        });
        $("#entryKey").click(function () {
            var fileName = $("#entryKey").text();
            $.ajax({
                url: "/api/storage/table/" + fileName,
                type: 'Get',
                success: function (data) {
                    $("#entryVal").text(data);
                },
                error: function (err) {
                    $("#entryVal").text("Error occured!" + err);
                }
            });
        });
    });
 </script>
